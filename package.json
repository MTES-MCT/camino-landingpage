      "postcss-grid-fluid": {},
      "postcss-button": {},
      "postcss-inline-svg": {},
      "autoprefixer": {}
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "typescale",
            "gf",
            "/button-/"
          ]
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "typescale"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "./dist/**/*"
    ]
